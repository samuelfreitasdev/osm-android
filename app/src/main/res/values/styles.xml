<resources>

    <style name="CardInfo" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_marginTop">@dimen/cell_vertical_space</item>
        <item name="android:layout_marginBottom">@dimen/cell_vertical_space</item>
        <item name="android:layout_marginLeft">@dimen/cell_horizontal_space</item>
        <item name="android:layout_marginRight">@dimen/cell_horizontal_space</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">2dp</item>
    </style>

    <style name="CardInfoLayout" parent="ThemeOverlay.AppCompat">
        <item name="android:paddingTop">@dimen/cell_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/cell_vertical_padding</item>
        <item name="android:paddingRight">@dimen/cell_horizontal_padding</item>
        <item name="android:paddingLeft">@dimen/cell_horizontal_padding</item>
    </style>

    <style name="CardInfoTitle" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CardInfoValue" parent="ThemeOverlay.AppCompat">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

</resources>
